<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Order</title>
</head>
<body>
    <h1>Select an Order to Pay</h1>
    <div>
        <ul>
            <% orders.forEach(order => { %>
                <li>
                    <label>
                        <input type="radio" name="orderId" value="<%= order._id %>" required>
                        Order ID: <%= order._id %> - Total: $<%= order.total %>
                    </label>
                </li>
            <% }) %>
        </ul>
        <button onclick="handlePayment()">Proceed to Payment</button>
    </div>
    <script src="/js/payment/index.js"></script>
</body>
</html>
