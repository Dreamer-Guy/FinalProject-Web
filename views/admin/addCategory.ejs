    </div>
    <div class="fixed top-0 left-0 w-full h-full bg-black/50 z-40 md:hidden sidebar-overlay"></div>
    <!-- end: Sidebar -->
    
    <main class="w-full md:w-[calc(100%-256px)] md:ml-64 bg-gray-50 min-h-screen transition-all main">
        <div class="py-2 px-6 bg-white flex items-center shadow-md shadow-black/5">
            <button type="button" class="text-lg text-gray-600 sidebar-toggle">
                <i class="ri-menu-line"></i>
            </button>
            <ul class="flex items-center text-sm ml-4">
                <li class="mr-2">
                    <a href="#" class="text-gray-400 hover:text-gray-600 font-medium">Category</a>
                </li>
                <li class="text-gray-600 mr-2 font-medium">/</li>
                <li class="text-gray-600 mr-2 font-medium">Add</li>
            </ul>
        </div>
        
        <div class="p-6">
            <div class="grid grid-cols-1 gap-6">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-semibold mb-4">Add New Category</h2>
                    <form id="addCategoryForm">
                        <div class="mb-4">
                            <label class="block text-gray-700 text-sm font-bold mb-2" for="categoryName">
                                Category Name
                            </label>
                            <input type="text" 
                                   id="categoryName" 
                                   name="name"
                                   class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
                                   required>
                        </div>
                        <div class="mb-4">
                            <label class="block text-gray-700 text-sm font-bold mb-2">
                                Properties
                            </label>
                            <div id="propertiesList">
                                
                            </div>
                            <button type="button" 
                                    onclick="addPropertyField()"
                                    class="mt-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200">
                                Add Property
                            </button>
                        </div>
                        <div class="flex flex-wrap sm:items-center justify-center sm:justify-end space-x-2">
                            <a href="/admin/categories" 
                            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 mb-2">
                                Cancel
                            </a>
                            <button type="submit" 
                                    class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 mb-2">
                                Add Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
